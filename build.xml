<?xml version="1.0"?>

<project name="Mars Rover" default="run" basedir=".">

    <property name="lib.dir" value="lib"/>

    <path id="classpath">
        <fileset dir="${lib.dir}" includes="*.jar"/>
    </path>

    <target name="compile">
        <javac srcdir="src; test" includeantruntime="false" destdir="out" classpath="lib/junit-4.11.jar"/>
    </target>

    <target name="run" depends="compile">
        <junit haltonfailure="true" printsummary="true" showoutput="yes">
            <test name="com.mars.RoverTest"/>
            <classpath>
                <pathelement location="out"/>
                <path refid="classpath"/>
            </classpath>
        </junit>
    </target>

</project>

